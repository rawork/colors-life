{raItems var=items table=articles_tags sort=name limit=100}            
            <div class="tag-cloud">
				<ul>
				{foreach from=$items item=item}
					<li><a class="w7" rel="tag" href="{raURL node=articles method=index}?tag={$item.id}">{$item.name}</a></li>
				{/foreach}
					
				
				</ul>

			
            
            </div>